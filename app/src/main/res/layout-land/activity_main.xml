<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F7F8F9"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:foregroundTint="#000000"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/title_text_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="center">

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/total_value_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_value"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp" />

        <EditText
            android:id="@+id/total_value_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:backgroundTint="#C7C7C7"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/num_people_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/n_people"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp" />

        <EditText
            android:id="@+id/num_people_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:backgroundTint="#C7C7C7"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$ 0,00"
            android:textSize="24sp"
            android:textColor="#000000"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/listen_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/listen"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFB200"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFB200"
            android:layout_marginTop="20dp" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
